<Page x:Class="WpfApp1.visualisation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="visualisation">

    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Button x:Name="clients_by_abc" Width="180" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Click="abc_Click">Consult the clients / family name</Button>
        <Button x:Name="clients_by_town" Width="180" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0" Click="clients_by_town_Click">Consult the clients / town</Button>

        <Button x:Name="orders" Width="150" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,80" Click="orders_Click">Consult the current orders</Button>
        
        <Button x:Name="Backreturn" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Return_Click">Return</Button>
    </Grid>
</Page>
